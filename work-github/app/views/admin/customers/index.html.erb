<div class="container">
  <div class="row mb-3">
    <div class="col-1 mr-5"></div>
    <div>
      <h5 style="background-color:#f4f4f4">　会員一覧　</h5>
    </div>
  </div>
  <div class="row ">
   <div class='col-lg-8 mx-auto'>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @customer.each do |customer| %>
            <tr>
              <th class="font-weight-normal"><%= customer.id %></th>
              <th class="font-weight-normal"><%= link_to admin_customer_path(customer.id), class: "text-body" do %><%= customer.first_name %><%= customer.family_name%><%end%></th>
              <th class="font-weight-normal"><%= customer.email %></th>
              <th><% if customer.withdrawal_flag == !true %>
                  <span class="text-success">有効</span>
                <%else%>
                  <span class="text-secondary">退会</span>
                <%end%>
              </th>
            </tr>
          <%end%>
        </tbody>
      </table>
    </div>
  </div>
</div>