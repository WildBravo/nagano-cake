<div class="container">
 <div class="row">
   <div class='col-md-12'>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @customer.each do |customer| %>
            <tr>
              <th><%= customer.id %></th>
              <th><%= link_to admin_customer_path(customer.id), class: "text-body" do %><%= customer.first_name %><%= customer.family_name%><%end%></th>
              <th><%= customer.email %></th>
              <th><% if customer.withdrawal_flag == !true %>
                  <span class="text-success">有効</span>
                <%else%>
                  <span class="text-secondary">退会</span>
                <%end%>
              </th>
            </tr>
          <%end%>
        </tbody>
      </table>
    </div>
  </div>
</div>