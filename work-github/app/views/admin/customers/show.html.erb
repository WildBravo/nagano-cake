<div class="container">
  <div class="row">
    <div class="col-lg-8">
      <table class="table table-borderless">
        <tr>
          <th class="nowrap font-weight-normal">会員ID</th>
          <td class="font-weight-normal"><%= @customer.id %></td>
        </tr>
        <tr>
          <th class="nowrap font-weight-normal">氏名</th>
          <td class="font-weight-normal"><%= @customer.family_name %><%= @customer.first_name %></td>
        </tr>
        <tr>
          <th class="nowrap font-weight-normal">フリガナ</th>
          <td class="font-weight-normal"><%= @customer.family_name_kana %><%= @customer.first_name_kana %></td>
        </tr>
        <tr>
          <th class="nowrap font-weight-normal">郵便番号</th>
          <td class="font-weight-normal"><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <th class="nowrap font-weight-normal">住所</th>
          <td class="font-weight-normal"><%= @customer.address %></td>
        </tr>
        <tr>
          <th class="nowrap font-weight-normal">電話番号</th>
          <td class="font-weight-normal"><%= @customer.phone_number %></td>
        </tr>
        <tr>
          <th class="nowrap font-weight-normal">メールアドレス</th>
          <td class="font-weight-normal"><%= @customer.email %></td>
        </tr>
        <tr>
          <th class="nowrap font-weight-normal">会員ステータス</th>
          <td><% if @customer.withdrawal_flag == !true %>
                <span class="text-success font-weight-bold">有効<span>
              <%else%>
                <span class="text-secondary font-weight-bold">無効</span>
              <%end%>
          </td>
        </tr>
        <tr>
          <th></th>
          <td><%= link_to "編集する", edit_admin_customer_path, class: "btn btn-success" %></td>
          <td><%= link_to "注文履歴一覧を見る", admin_order_path, class: "btn btn-primary" %></td>
        </tr>
      </table>
    </div>
  </div>
</div>