<div class="container">
  <div class="row">
    <h3>ジャンル一覧・追加</h3>
    <div class="col">
    <table>
      <tr>
      <%= form_with model: @genre, url: admin_genres_path, method: :post, local: true do |f| %>
        <th>
          <%= f.label :genre_name, "ジャンル名" %>
          <%= f.text_field :genre_name, placeholder:"ジャンル名" %>
        </th>
        <th>
          <%= f.submit "新規登録" %>
        </th>
      <% end %>
      </tr>
    </table>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <table>
        <thead>
          <tr>
            <th>ジャンル名</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |item| %>
          <tr>
            <td><%= item.genre_name %></td>
            <td><%= link_to "編集する", edit_admin_genre_path(item.id) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>