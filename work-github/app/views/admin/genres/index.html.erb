<div class="container">
  <span style="background-color:#f4f4f4">　ジャンル一覧・追加　</span>
  <div class="row">
    <div class="col-md-5">
      <%= form_with model: @genre, url: admin_genres_path, method: :post, local: true do |f| %>
      <table style="margin-top:30px">
        <tr>
            <td>　<%= f.label :genre_name, "ジャンル名" %>　</td>
            <td>　<%= f.text_field :genre_name, placeholder:"ジャンル名" %>　</td>
            <td>　<%= f.submit "　新規登録　", class: "btn btn-success" %>　</td>
        </tr>
      </table>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4">
      <table class="table table-hover table-inverse border-bottom" style="margin-top:30px">
        <thead>
          <tr bgcolor="#f4f4f4">
            <th>　　ジャンル名</th>
            <th></th>
          </tr>
        </thead>
        <% @genres.each do |item| %>
        <tbody>
           <tr>
             <td><%= item.genre_name %></td>
             <td><%= link_to "編集する", edit_admin_genre_path(item.id), class: "btn btn-success" %></td>
           </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>