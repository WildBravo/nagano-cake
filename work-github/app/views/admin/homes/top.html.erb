<div class="container" >
  <div class='row'>
    <div class="col-md-8 offset-md-2">
        <span style="background-color:#f4f4f4">　注文履歴一覧　</span>
     <table class="table table-hover table-inverse" style="margin-top:15px">
       <thead>
         <tr bgcolor="#f4f4f4">
           <th scope="col">購入日時</th>
           <th scope="col">購入者</th>
           <th scope="col">注文個数</th>
           <th scope="col">注文ステータス</th>
         </tr>
       </thead>
       <tbody>
         <% @order_detail.each do|order_detail| %>
           <tr>
             <td><%= link_to l order_detail.created_at, admin_orders_path(order_detail.id), format: :short, class: 'text-dark' %></td>
             <td><%= order_detail.id.name %></td>
             <td><%= order_detail.volume %></td>
             <% if @order.reception_status == 0 %>
               <td>入金待ち</td>
             <% elsif @order.reception_status == 1 %>
               <td>入金確認</td>
             <% elsif @order.reception_status == 2 %>
               <td>製作中</td>
             <% elsif @order.reception_status == 3 %>
               <td>発送準備中</td>
             <% else @order.reception_status == 4 %>
               <td>発送済み</td>
             <% end %>
           </tr>
         <% end %>

       </tbody>
     </table>
    </div>
  </div>
</div>
