<div class="container">
  <div class="row">
    <div class="col-lg-9 mx-auto">
      <h5>管理者ログイン</h5>
    </div>
  </div>
  
  <div class="row">
    <div class="">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <table class="d-flex justify-content-center">
          <tr>
            <th class="nowrap"><%= f.label :"メールアドレス" %></th>
            <th class=""><%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %></th>
          </tr>
          <tr>
            <th class="nowrap"><%= f.label :パスワード %></th>
            <td class=""><%= f.password_field :password, autocomplete: "current-password", class: "form-control" %></td>
          </tr>
          <tr>
            <th class="space"></th>
            <td></td>
          </tr>
          <tr>
            <th></th>
            <td><%= f.submit "ログイン", class: "btn btn-primary" %></td>
          </tr>
        </table>
      <% end %>
      
      <%= render "admin/shared/links" %>
    </div>
  </div>
</div>