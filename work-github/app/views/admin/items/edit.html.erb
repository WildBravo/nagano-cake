<div class="container">
  <div class="row">
    <h3>商品編集</h3>
  </div>
  <div class="row">
    <%= form_with model: @item, url: admin_item_path(@item), method: :patch do |f| %>
    <div class="col">
      <%= f.label :image, "商品画像" %>
      <%= f.file_field :image, accept: "image/*" %>
    </div>
    <div class="col">
      <%= f.label :name, "商品名" %>
      <%= f.text_field :name, placeholder:"商品名" %>
    </div>
    <div class="col">
      <%= f.label :body, "商品説明" %>
      <%= f.text_area :body, placeholder:"ここに説明文を記述します", size: "30x5" %>
    </div>
    <div class="col">
      <%= f.collection_select :genre_id, Genre.all, :id, :genre_name %>
      <%#= f.select :genre_id, [['ジャンル(仮)', 1]] %>
    </div>
    <div class="col">
      <%= f.label :price, "税抜き価格" %>
      <%= f.text_field :price, placeholder:"1000" %>円
    </div>
    <div class="col">
      <%= f.radio_button :sale_status, true %>
      <%= f.label :sale_status, '販売中', value: true %>
      <%= f.radio_button :sale_status, false %>
      <%= f.label :sale_status, '販売停止中', value: false %>
    </div>
    <div class="col">
      <%= f.submit "変更を保存", class:"btn btn-lg" %>
    </div>
    <% end %>
  </div>
</div>