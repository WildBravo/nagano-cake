<div class="container">
  <div class="row">
    <div class="col-md-11">
      <tr>
      <span style="background-color:#f4f4f4">　商品一覧　</span>
      <div class="text-right">
      <%= link_to new_admin_item_path do %>
      <button type="button" class="btn btn-outline-secondary rounded-circle p-0" style="width:2rem;height:2rem;">＋</button>
      <% end %>
      </div>
      </tr>
      <table class='table table-hover table-inverse border-bottom' style="margin-top:10px">
        <thead>
          <tr bgcolor="#f4f4f4">
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th colspan="3"></th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td>
              <%= link_to admin_item_path(item), class: "text-dark border-bottom border-dark" do %>
                <%= item.name %>
              <% end %>
            </td>
            <td>¥<%= item.price %></td>
            <td><%= item.genre.genre_name %></td>
            <th colspan="3"></th>
            <% if item.sale_status == true %>
              <td class="text-success font-weight-bold">販売中</td>
            <% else %>
              <td class="text-secondary font-weight-bold">販売停止中</td>
            <% end %>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row" style="margin-top:40px">
    <div class="col-md-6 offset-md-3 py-2">
      <div class="text-center">
        <div class="pagination justify-content-center">
          <%= paginate @items %>
        </div>
      </div>
    </div>
  </div>
</div>