<div class="container">
　<div class="col-md-3">
    <span style="background-color:#f4f4f4">　商品詳細　</span>
　</div>
  <div class="row">
    <div class="col-md-3" style="margin-top:40px">
      <%= image_tag @item.get_image, size: "230x150" %>
    </div>
    <div class="col-md-5">
      <table width="400" height="370" style="margin-top:30px">
        <tr>
          <td>商品名</td>
          <td><%= @item.name %></td>
        </tr>
        <tr>
          <td>商品説明</td>
          <td><%= @item.body %></td>
        </tr>
        <tr>
          <td>ジャンル</td>
          <td><%= @item.genre.genre_name %></td>
        </tr>
        <tr>
          <td>税込価格<br>(税抜価格)</td>
          <td><%= (@item.price * 1.1).floor %>(<%= @item.price %>)円</td>
        </tr>
        <tr>
          <td>販売ステータス</td>
          <% if @item.sale_status == true %>
          <td class="text-success">販売中</td>
          <% else %>
          <td class="text-secondary">販売停止中</td>
          <% end %>
        </tr>
        <tr>
          <td><%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-success" %></td>
        </tr>
      </table>
    </div>
  </div>
</div>