<div class='container'>
  <div class='row'>
    <div class='col-md-8 offset-md-1'>
  		<h2>注文履歴詳細</h2>
  		<table class='table table-hover table-inverse'>
  		  <thead>
  		    <tr>
          <th>購入者</th>
          <th>注文日</th>
          <th>配送先</th>
          <th>支払方法</th> 
          <th>注文ステータス</th>
        </tr>
  		  </thead>
  		  <tbody>
  		    <tr>
  		      <td><%= @order.name %></td>
  		      <td><%= @order.created_at %></td>
  		      <td>
  		        <%= @order.postal_code  %>
              <%= @order.address %>
              <%= @order.name %>
  		      </td>
  		      <td><%= @order.payment %></td>
  		       <%= form_with model: [:admin, @order], method: :patch, local: true do |f| %>
  		        <td>
  		           <%= f.select :reception_status, Order.reception_statuses.keys.map {|k| [t("enums.reception_status.#{k}"), k]} %>
  		           <%= f.submit "更新" %>
  		        </td>
  		      <% end %>
  		    </tr>
  		  </tbody>
      </table>
      
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価(税込み)</th>
            <th>数量</th>
            <th>小計</th>
            <th>制作ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @order.order_details.each do |order| %>
          <tr>
            <td><%= order.item.name %></td>
            <td><%= order.item.with_tax_price %></td>
            <td><%= order.volume %></td>
            <td><%= order.subtotal %></td>
          </tr>
          <% end %>
        </tbody>
      </table>  
        
    </div>
  </div>
</div>