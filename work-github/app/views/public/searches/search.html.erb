<div class="container" >
  <div class='row'>
    <div class="col-md-8 offset-md-2">
      <h2>検索結果</h2>
      
      <% if @range == "Item" %>
        
            <% @items.each do |item| %>
              <div class="col-md-2">
                <div><%= link_to item_path(item) do %>
                      <%= image_tag item.get_image, size: "180x100" %>
                     <% end %>
                </div>
                <div><%= link_to item.name, item_path(item.id)%></div>
                <div>¥<%= item.price %></div>
              </div>
            <% end %>
      <% else %>
        
        <% @genres.each do |genre| %>
          <tr>
            <th><%= genre.genre_name %></th>
          </tr>
          <% genre.items.each do |item| %>
            <div class="col-md-2">
              <div>
                <%= link_to item_path(item) do %>
                  <%= image_tag item.get_image, size: "180x100" %>
                <% end %>
              </div>
              <div><%= link_to item.name, item_path(item.id)%></div>
              <div>¥<%= item.price %></div>
            </div>
          <% end %>
        <% end %>
         
      <% end %>
    </div>
  </div>
</div>
