<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="conteiner">
  <div class="row mb-4">
    <div class="col-2"></div>
    <div>
      <h5 style="background-color:#f4f4f4">　ログイン　</h5>
    </div>
  </div>
  <div class="row mb-3">
    <div class="col-2"></div>
    <div>
      <h5 style="background-color:#f4f4f4">　会員の方はこちらからログイン　</h5>
    </div>
  </div>
  
  <div class="row justify-content-center">
    <div class="col-md-8 offset-md-1">
        <div class="row field m-2" >
          <label class="col-form-label col-sm-3" for="layoutExam3-name">メールアドレス</label>
          <div><%= f.email_field :email, size:45, autofocus: true, autocomplete: "email", placeholder:"Wild@Bravo.com"  %></div>
        </div>
        <div class="row field m-2" >
          <label class="col-form-label col-sm-3" for="layoutExam3-name">パスワード</label>
          <div><%= f.password_field :password, size:45, autocomplete: "current-password" %></div>
        </div>
      </div>
    </div>
    <div class="row justify-content-center">
      <div class="col-3"></div>
      <div class="col-6"><%= f.submit "ログイン", class: "px-5 btn btn-primary " %></div>
    </div>
    <div class="row mt-3">
      <div class="col-2"></div>
      <h5 style="background-color:#f4f4f4">　会員登録がお済みではない方　</h5>
    </div>
    <div class="row mt-3">
      <div class="col-3"></div>
      <div class="col"><%= render "public/shared/links" %></div>
    </div>
</div>
<% end %>