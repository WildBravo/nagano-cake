<div class="conteiner">
  <div class="row">
    <div class="col-md-8 offset-md-1">
      <h4 >ログイン</h4>
      <h5 class="m-3">会員の方はこちらからログイン</h5>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-md-8 offset-md-1">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="row field m-2" >
          <label class="col-form-label col-sm-3" for="layoutExam3-name">メールアドレス</label>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"Wild@Bravo.com"  %>
        </div>
        <div class="row field m-2" >
          <label class="col-form-label col-sm-3" for="layoutExam3-name">パスワード</label>
          <%= f.password_field :password, autocomplete: "current-password" %>
        </div>
      </div>
    </div>
    <div class="row justify-content-center">
      <div class="col-3"></div>
      <div class="col-6"><%= f.submit "ログイン", class: "px-5 btn btn-primary " %></div>
    </div>
      <% end %>
    <div class="row">
      <div class="col-3">会員登録がお済みではない方</div>
      <div class="col"><%= render "public/shared/links" %></div>
    </div>
    </div>
  </div>
</div>