<div class="conteiner">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <h4 class="mt-5">新規会員登録</h4>
    </div>
    <div class="col-md-8 offset-md-1">
      <h4 class="mt-5">ログイン</h4>

      <h5 class="m-3">会員の方はこちらからログイン</h5>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="row field m-2" >
          <label class="col-form-label col-sm-3" for="layoutExam3-name">メールアドレス</label>
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
      
        <div class="row field m-2" >
          <label class="col-form-label col-sm-3" for="layoutExam3-name">パスワード</label>
          <%= f.password_field :password, autocomplete: "current-password" %>
        </div>
      
        <div class="actions align-items-center ">
          <%= f.submit "ログイン", class: "btn btn-primary " %>
        </div>
      <% end %>
      
      
      <div>会員登録がお済みではない方</div>
      <%= render "public/shared/links" %>
    </div>
  </div>
</div>