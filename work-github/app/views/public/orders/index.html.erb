<div class='container'>
  <div class='row'>
    <h1>注文履歴一覧</h1>
  </div>
  <div class='row'>
    <div class='col-md-12'>
       <table border="1" cellpadding="6" cellspacing="0" width="1100" height="150">
         <thead>
           <tr style="background-color:#f4f4f4">
            <th>注文日</th>
            <th>配送先</th>
            <th>注文商品</th>
            <th>支払金額</th>
            <th>ステータス</th>
            <th>注文詳細</th>
           </tr>
         </thead>
         <tbody>
           <% @orders.each do |order| %>
             <tr>
               <td><%= order.created_at %></td>
                <td>
                  〒<%= order.postal_code  %><br>
                  <%= order.address %><br>
                  <%= order.name %>
                </td>
               <td>
                  <% order.order_details.each do |order_detail| %>
                  <%= order_detail.item.name  %>
                  <% end %>
                </td>
               <td><%= order.price %>円</td>
               <td><%= order.reception_status_i18n %></td>
               <td><%= link_to '表示する', order_path(order.id),class: "btn btn-sm btn-success" %> </td>
              </tr>
           <% end %>
          </tbody>
       </table>
      </div>
    </div>
  </div>


