<div class='container'>
  <div class='row'>
    <h1>注文履歴詳細</h1>
  </div>
  <div class='row'>
    <div class='col-md-7'>
       <table border="1" cellpadding="6" cellspacing="0" width="600" height="150">
         <h5>注文情報</h5>
         <thead>
           <tr style="background-color:#f4f4f4">
            <th>注文日</th>
            <th>配送先</th>
            <th>支払い方法</th>
            <th>支払金額</th>
            <th>ステータス</th>
           </tr>
         </thead>
        <tbody>
          <tr>
            <td><%= @order.created_at %></td>
            <td>
              <%= @order.postal_code %>
              <%= @order.address %>
              <%= @order.name %>
            </td>
            <td><%= @order.payment %></td>
            <td><%= @order.price %></td>
            <td><%= @order.reception_status_i18n %></td>
          </tr>
        </tbody>
       </table>
       
        <table border="1" cellpadding="6" cellspacing="0" width="600" height="150">
         <h5>請求情報</h5>
         <thead>
           <tr style="background-color:#f4f4f4">
            <th>商品合計</th>
            <th>配送料</th>
            <th>ご請求額</th>
           </tr>
         </thead>
         <tbody>
            <tr>
              <td><%= @order.price %></td>
              <td><%= @order.postage %></td>
              <td><%= @order.postage + @order.price%></td>
            </tr>
         </tbody>
         </table>
         
         <table border="1" cellpadding="6" cellspacing="0" width="600" height="150">
         <h5>注文内容</h5>
         <thead>
           <tr style="background-color:#f4f4f4">
               <th>商品</th>
               <th>単価 (税込)</th>
               <th>個数</th>
               <th>小計</th>
           </tr>
         </thead>
        <tbody>
            <tr>
              <td><%= @order_detail.item.name %></td>
              <td><%= @order_detail.item.with_tax_price %></td>
              <td><%= @order_detail.volume %></td>
              <td><%= @order_detail.subtotal %></td>
            </tr>
        </tbody>
      </table>
         
      </div>
    </div>
  </div>
