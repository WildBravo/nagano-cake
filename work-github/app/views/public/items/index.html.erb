<div class="container">
  <div class="row">
    <div class="col-3"></div>
  </div>
  <div class="row">
    <h2>商品一覧</h2>
    <span>
      (全<%= @items.count %>件)
    </span>
    <% @items.each do |item| %>
    <div class="col-2">
    <%= link_to item_path(item) do %>
      <%= image_tag item.get_image, size: "50x50" %>
    <% end %>
    <p>
    <%= item.name %>
    </p>
    <p>
    <%= item.price %>
    </p>
    </div>
    <% end %>
  </div>
</div>