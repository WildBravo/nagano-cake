<div class="container">
  <div class="row">
    <div class="col-3"></div>
  </div>
  <div class="row">
    <h2>商品一覧</h2>
    <span>
      (全<%= @items.count %>件)
    </span>
    <% @items.each do |item| %>
    <% if item.sale_status == true %>
      <div class="col-2">
      <%= link_to item_path(item) do %>
        <%= image_tag item.get_image, size: "80x80" %>
      <% end %>
      <p>
      <%= item.name %>
      </p>
      <p>
      <%= item.price %>
      </p>
      </div>
    <% else %>
      <div class="col-2">
      <%= image_tag 'sold_out.jpeg', size: "80x80" %>
      <p>
      <%= item.name %>
      </p>
      <p>
      <%= item.price %>
      </p>
      </div>
    <% end %>
    <% end %>
  </div>
</div>