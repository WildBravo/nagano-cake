<div class="container">
  <div class="row">
    <h3>ショッピングカート</h3>
    <%= link_to "カートを空にする", destroy_all_path, method: :delete %>
  </div>
  <div class="row">
    <div class="col">
    <table class="table">
      <thead>
        <th>商品名</th>
        <th>単価(税込)</th>
        <th>数量</th>
        <th>小計</th>
        <th></th>
      </thead>
      <tbody>
      <% @cart_items.each do |cart_item| %>
          <tr>
              <td><%= image_tag cart_item.item.get_image, size: "30x30" %><%= cart_item.item.name %></td>
              <td><%= cart_item.item.with_tax_price %></td>
              <td>
                <%= form_with model: cart_item, url: cart_item_path(cart_item.id), method: :patch do |f| %>
                  <%= f.select :volume, *[1..10] %>
                  <%= f.submit '変更' %>
                <% end %>
              </td>
              <td><%= cart_item.subtotal %></td>
              <% @price_all += cart_item.subtotal %>
              <td><%= link_to "削除する", cart_item_path(cart_item.id), method: :delete %></td>
          </tr>
      <% end %>
      </tbody>
      <tr>
        <td><%= link_to "買い物を続ける", items_path %></td>
      </tr>
      <tr>
        <td>合計金額</td>
        <td><%= @price_all %></td>
      </tr>
    </table>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <%#= link_to "情報入力へ進む", new_order_path %>
    </div>
  </div>
</div>