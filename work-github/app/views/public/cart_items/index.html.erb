<div class="container">
  <div class="row">
    <h3>ショッピングカート</h3>
    <table> 
      <thead>
        <th>商品名</th>
        <th>単価(税込)</th>
        <th>数量</th>
        <th>小計</th>
        <th></th>
      </thead>
      <tbody>
      <% インスタンス変数.each do |cart_item| %>
          <tr>
              <td><%= (cart_item.item.price * 1.1).floor %></td>
              <td><%= (cart_item.item.price * 1.1).floor * cart_item.amount %></td>
              <% @合計金額 +=  (cart_item.item.price * 1.1).floor * cart_item.amount %>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>