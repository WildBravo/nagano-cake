<div class="conteiner">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div>
        <%#= flash[:notice] %>
      </div>
      <h4 class="m-3">新規会員登録</h4>
    </div>
  </div>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
  
    <div class="row justify-content-center my-2">
      <div class="col-1 ml-5 mr-3"><%= f.label :"　　名前" %></div>
      <div class="col-1"></div>
      <div class="col-2 ml-5"><span>(姓)</span><%= f.text_field :family_name, autofocus: true, placeholder: "令和(姓)" %></div>
      <div class="col-2 mr-5"><span>(名)</span><%= f.text_field :first_name, autofocus: true, placeholder:"道子(名)" %></div>
      <div class="col-1"></div>
      <div class="col-1"></div>
    </div>
    
    <div class="row justify-content-center my-2">
      <div class="col-1 ml-4 mr-4"><%= f.label :"フリガナ" %></div>
      <div class="col-3 text-right"><span>(セイ)</span><%= f.text_field :family_name_kana, autofocus: true, placeholder:"レイワ" %></div>
      <div class="col-3"><span>(メイ)</span><%= f.text_field :first_name_kana, autofocus: true, placeholder:"ミチコ" %></div>
      <div class="col-1"></div>
    </div>
    
    <div class="row justify-content-center my-2">
      <div class="col-1"></div>
      <div class="col-1"></div>
      <div class="col-2 mr-2"><%= f.label :"メールアドレス" %></div>
      <div class="col ml-5"><%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"Wild@Bravo.com" %></div>
    </div>
    
    <div class="row justify-content-center my-2">
      <div class="col-1"></div>
      <div class="col-1"></div>
      <div class="col"><%= f.label :"郵便番号(ハイフンなし)" %></div>
      <div class="col"><%= f.text_field :postal_code, autofocus: true, placeholder:"0000000" %></div>
      <div class="col-3"></div>
      <div class="col-2"></div>
    </div>
    
    <div class="row justify-content-center my-2">
      <div class="col-1"></div>
      <div class="col-1"></div>
      <div class="col"><%= f.label :住所 %></div>
      <div class="col"><%= f.text_field :address, autofocus: true, placeholder:"東京都渋谷区代々木神園町0-0" %></div>
      <div class="col"></div>
      <div class="col"></div>
    </div>
    
    <div class="row justify-content-center my-2">
      <div class="col-1"></div>
      <div class="col-1"></div>
      <div class="col"><%= f.label :"電話番号(ハイフンなし)" %></div>
      <div class="col"><%= f.text_field :phone_number, autofocus: true, placeholder:"00000000000" %></div>
      <div class="col-3"></div>
      <div class="col-2"></div>
    </div>
    
    <div class="row justify-content-center my-2">
      <div class="col-1"></div>
      <div class="col-1"></div>
      <div class="col"><%= f.label :"パスワード(6文字以上)" %></div>
      <div class="col"><%= f.password_field :password, autocomplete: "new-password" %></div>
      <div class="col-3"></div>
      <div class="col-2"></div>
    </div>
    
    <div class="row justify-content-center my-2">
      <div class="col-1"></div>
      <div class="col-1"></div>
      <div class="col"><%= f.label :"パスワード(確認用)" %></div>
      <div class="col"><%= f.password_field :password, autocomplete: "new-password" %></div>
      <div class="col-3"></div>
      <div class="col-2"></div>
    </div>
    
    <div class="row justify-content-center my-2">
      <div class="col-1"></div>
      <div class="col-1"></div>
      <div class="col-5"><%= f.submit "新規登録", class: "px-5 btn btn-success mb-3" %></div>
    </div>
    
    <%end%>
    <div class="">
      <h4 class="col-md-8 offset-md-2">既に登録済みの方は</h4>
    </div>
    <div class="">
      <span class="col-md-8 offset-md-2"><%= render "public/shared/links" %></span>
    </div>
</div>