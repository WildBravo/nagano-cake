<div class="conteiner">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <h4>新規会員登録</h4>
    </div>
    <div class="col-md-8 offset-md-3">

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>
        
        <div class="field">
          <%= f.label :名前 %>
          <%= f.label :"(姓)" %>
          <%= f.text_field :family_name, autofocus: true %>
          <%= f.label :"(名)" %>
          <%= f.text_field :first_name, autofocus: true %>
        </div>
        
        <div class="field">
          <%= f.label :フリガナ %>
          <%= f.label :"(セイ)" %>
          <%= f.text_field :family_name_kana, autofocus: true %>
          <%= f.label :"(メイ)" %>
          <%= f.text_field :first_name_kana, autofocus: true %>
        </div>
      
        <div class="field">
          <%= f.label :メールアドレス %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
      
        <div class="field">
          <%= f.label :郵便番号 %><span>(ハイフンなし)</span>
          <%= f.text_field :postal_code, autofocus: true %>
        </div>
        
        <div class="field">
          <%= f.label :住所 %>
          <%= f.text_field :address, autofocus: true %>
        </div>
        
        <div class="field">
          <%= f.label :電話番号 %><span>(ハイフンなし)</span>
          <%= f.text_field :phone_number, autofocus: true %>
        </div>
      
        <div class="field">
          <%= f.label :パスワード %><span>(6文字以上)</span>
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>
      
        <div class="field">
          <%= f.label :"パスワード(確認)" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>
        
        
        
      
        <div class="actions">
          <%= f.submit "新規登録", class: "btn btn-success" %>
        </div>
      <% end %>
      
      <h4>既に登録済みの方は</h4>
      <%= render "public/shared/links" %>
    </div>
  </div>
</div>