<div class="container">
  <div class="row">
    <div class="col-1"></div>
    <div><%#= flash[:notice] %></div>
    <div class="ml-3 mb-5">
      <h5 style="background-color:#f4f4f4">　新規会員登録　</h5>
    </div>
  </div>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
  
  <div class="row my-2">
    <div class="col-3"><%= f.label :"名前" %></div>
    <div>(姓)　</div>
    <div><%= f.text_field :family_name, autofocus: true, placeholder: "令和(姓)" %></div>
    <div class="col-1"></div>
    <div>(名)　</div>
    <div><%= f.text_field :first_name, autofocus: true, placeholder:"道子(名)" %></div>
  </div>
  
  <div class="row my-2">
    <div class="col-3"><%= f.label :"フリガナ" %></div>
    <div>(セイ)</div>
    <div><%= f.text_field :family_name_kana, autofocus: true, placeholder:"レイワ" %></div>
    <div class="col-1"></div>
    <div>(メイ)</div>
    <div><%= f.text_field :first_name_kana, autofocus: true, placeholder:"ミチコ" %></div>
  </div>
  
  <div class="row my-2">
    <div class="col-3 mr-2"><%= f.label :"メールアドレス" %></div>
    <div>　　<%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"Wild@Bravo.com" %></div>
  </div>
  
  <div class="row my-2">
    <div class="col-3 mr-2"><%= f.label :"郵便番号(ハイフンなし)" %></div>
    <div>　　<%= f.text_field :postal_code, autofocus: true, placeholder:"0000000" %></div>
  </div>
  
  <div class="row my-2">
    <div class="col-3 mr-2"><%= f.label :住所 %></div>
    <div>　　<%= f.text_field :address, autofocus: true, placeholder:"東京都渋谷区代々木神園町0-0", size:60 %></div>
  </div>
  
  <div class="row my-2">
    <div class="col-3 mr-2"><%= f.label :"電話番号(ハイフンなし)" %></div>
    <div>　　<%= f.text_field :phone_number, autofocus: true, placeholder:"00000000000" %></div>
  </div>
  
  <div class="row my-2">
    <div class="col-3 mr-2"><%= f.label :"パスワード(6文字以上)" %></div>
    <div>　　<%= f.password_field :password, autocomplete: "new-password" %></div>
  </div>
  
  <div class="row my-2">
    <div class="col-3 mr-2"><%= f.label :"パスワード(確認用)" %></div>
    <div>　　<%= f.password_field :password, autocomplete: "new-password" %></div>
  </div>
  
  <div class="row">
    <div class="col-3 mr-5"></div>
    <div class=""><%= f.submit "新規登録", class: "px-5 btn btn-success mb-3" %></div>
  </div>
    
  <%end%>
  <div class="row mt-2">
    <div class="col-1"></div>
    <div>
      <h5 style="background-color:#f4f4f4">　既に登録済みの方は　</h5>
    </div>
  </div>
  
  <div class="row">
    <div class="col-1 mr-5"></div>
    <div class="mt-3">
      <span><%= render "public/shared/links" %></span>
    </div>
  </div>
</div>