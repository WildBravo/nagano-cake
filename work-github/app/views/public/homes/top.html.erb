               </tr>
             </thead>
             <tbody>  -->
    
    
    
           <div class="col-md-3">
           </div>
    
              <% @items.each do |item| %>
                <div class="col-md-2">
                  <div><%#= image_tag "/assets/asia.jpg", size: "180x100" %>
                    <%= link_to item_path(item) do %>
                     <%= image_tag item.get_image, size: "180x100" %>
                    <% end %>
                  </div>
                  <%#= link_to image_tag "item.image", item_path(item.id), size: "180x100" %>
                  <div><%= link_to item.name, item_path(item.id), class: 'text-dark' %></div>
                  <div>¥<%= item.price %></div>
                </div>
              <% end %>
              <div class="col-md-12">
                <p class="text-right">
                 <%= link_to "全ての商品を見る >", items_path %>
                </p>
              </div>
      </div>
    </div>
  </div>
